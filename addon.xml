<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.jellyfin" name="Jellyfin Plugin" version="0.0.2" provider-name="Frank Riley">
    <requires>
        <import addon="xbmc.metadata" version="2.1.0"/>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.22.0"/>
        <import addon="script.module.simplejson" version="3.17.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="plugin_source.py">
        <provides>video</provides>
        <medialibraryscanpath content="movies">library/movies</medialibraryscanpath>
        <medialibraryscanpath content="tvshows">library/tvshows</medialibraryscanpath>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Fetch TV show and Movie metadata from a Jellyfin server</summary>
        <description lang="en_GB">Fetch TV show and Movie metadata from a Jellyfin server</description>
        <platform>all</platform>
        <license>GPL-3.0-or-later</license>
        <reuselanguageinvoker>false</reuselanguageinvoker>
    </extension>
</addon>
